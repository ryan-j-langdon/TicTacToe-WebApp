@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-2">
            <div class="left-side nowrap">
                <h2 id="title">
                    <b>Tic Tac Toe</b>
                </h2>
                <div id="author">App by Ryan Langdon</div>
            </div>

            <div class="right-side">

                <a href="https://github.com/ryan-j-langdon/TicTacToe-WebApp" target="_blank">
                    GitHub
                    <img src="assets/images/github-mark-white.svg" alt="View code" width="30px" height="30px">
                </a>
                
                <a href="https://www.linkedin.com/in/ryan-j-langdon/" target="_blank">
                    LinkedIn
                    <img src="assets/images/linkedin-icon.svg" alt="LinkedIn" width="30px" height="30px">
                </a>

                <a href="assets/Resume.pdf" target="_blank">
                    Resume
                    <img src="assets/images/resume-icon-white.png" alt="My Resume" width="30px" height="30px">
                </a>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
